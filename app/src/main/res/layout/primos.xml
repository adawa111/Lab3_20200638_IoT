<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/barrasupprimos"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:background="#C473E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tituloprimos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido al contador de los NÃºmeros Primos"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/barrasupprimos"
        app:layout_constraintEnd_toEndOf="@+id/barrasupprimos"
        app:layout_constraintStart_toStartOf="@+id/barrasupprimos"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/indicadorprimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su primo es:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
